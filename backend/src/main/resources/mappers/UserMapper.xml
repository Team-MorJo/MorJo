<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.morjo.model.dao.UserDao">
	<resultMap id="UserResultMap" type="User">
		<id property="userId" column="user_id" />
		<id property="kakaoId" column="kakako_id" />
		<id property="nickname" column="nickname" />
		<id property="role" column="role" />
		<id property="createdAt" column="created_at" />
	</resultMap>
	
	<select id="SelectOne" parameterType="long" resultMap="UserResultMap">
		SELECT * FROM user
		WHERE kakao_id = #{kakaoId}
	</select>
	
	<insert id="insertUser" parameterType="User">
		INSERT INTO user (kakao_id, nickname, role, created_at)
		VALUES (#{kakaoId}, #{nickname}, #{role}, #{createdAt})
	</insert>
</mapper>
