<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.morjo.model.dao.CommentDao">
    <select id="selectCommentsByQuizId" parameterType="long" resultType="Comment">
        SELECT * FROM comment
        WHERE quiz_id = #{quizId}
    </select>

</mapper>
